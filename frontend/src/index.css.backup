@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  * {
    @apply border-slate-200;
  }
  
  html {
    @apply antialiased;
    font-feature-settings: 'cv11', 'ss01';
    font-variation-settings: 'opsz' 32;
  }
  
  body {
    @apply bg-slate-25 text-slate-900 font-sans;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

@layer components {
  /* Premium Button Base */
  .btn-base {
    @apply inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-lg transition-all duration-200 ease-out focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed;
  }
  
  /* Primary Button */
  .btn-primary {
    @apply btn-base bg-slate-900 text-white hover:bg-slate-800 focus:ring-slate-900 active:scale-[0.98] shadow-sm hover:shadow-md;
  }
  
  /* Secondary Button */
  .btn-secondary {
    @apply btn-base bg-white text-slate-700 border border-slate-300 hover:bg-slate-50 focus:ring-slate-500 active:scale-[0.98] shadow-sm hover:shadow-md;
  }
  
  /* Ghost Button */
  .btn-ghost {
    @apply btn-base text-slate-600 hover:bg-slate-100 focus:ring-slate-500;
  }
  
  /* Success Button */
  .btn-success {
    @apply btn-base bg-success-600 text-white hover:bg-success-700 focus:ring-success-600 active:scale-[0.98] shadow-sm hover:shadow-md;
  }
  
  /* Warning Button */
  .btn-warning {
    @apply btn-base bg-warning-600 text-white hover:bg-warning-700 focus:ring-warning-600 active:scale-[0.98] shadow-sm hover:shadow-md;
  }
  
  /* Error Button */
  .btn-error {
    @apply btn-base bg-error-600 text-white hover:bg-error-700 focus:ring-error-600 active:scale-[0.98] shadow-sm hover:shadow-md;
  }
  
  /* Card Base */
  .card {
    @apply bg-white rounded-xl border border-slate-200 shadow-sm hover:shadow-md transition-shadow duration-200;
  }
  
  /* Premium Card */
  .card-premium {
    @apply bg-white rounded-2xl border border-slate-150 shadow-elegant hover:shadow-premium transition-all duration-300;
  }
  
  /* Input Base */
  .input-base {
    @apply w-full px-3.5 py-2.5 text-sm border border-slate-300 rounded-lg bg-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition-colors duration-200;
  }
  
  /* Status Badge */
  .badge {
    @apply inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full;
  }
  
  .badge-success {
    @apply badge bg-success-50 text-success-700;
    border: 1px solid theme('colors.success.200');
  }
  
  .badge-warning {
    @apply badge bg-warning-50 text-warning-700;
    border: 1px solid theme('colors.warning.200');
  }
  
  .badge-error {
    @apply badge bg-error-50 text-error-700;
    border: 1px solid theme('colors.error.200');
  }
  
  .badge-info {
    @apply badge bg-slate-100 text-slate-700 border border-slate-200;
  }
  
  /* Loading Spinner */
  .spinner {
    @apply inline-block w-4 h-4 border-2 border-current border-t-transparent rounded-full animate-spin;
  }
  
  /* Focus Ring */
  .focus-ring {
    @apply focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
  
  .bg-gradient-subtle {
    background: linear-gradient(135deg, rgb(248, 250, 252) 0%, rgb(241, 245, 249) 100%);
  }
  
  .bg-glass {
    @apply bg-white/80 backdrop-blur-sm;
  }
  
  .border-glass {
    @apply border-white/20;
  }
  
  .shadow-glass {
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  @apply w-2;
}

::-webkit-scrollbar-track {
  @apply bg-slate-100;
}

::-webkit-scrollbar-thumb {
  @apply bg-slate-300 rounded-full hover:bg-slate-400;
}

/* Selection */
::selection {
  @apply bg-slate-900 text-white;
}
